// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Media {
  id Int @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  title String
  year Int
  poster String
  cast Person[]
  genres Genre[]
  reviews Review[]
  startYear Int?
  endYear Int?
  seasons Int?
  episodes Episode[]
  type MediaType
}

model Person {
  id Int @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  name String
  age Int
  bio String @db.Text
  media Media[]
}

model Genre {
  id Int @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  title String
  media Media[]
}

model Review {
  id Int @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  comment String @db.Text
  media Media @relation(fields: [mediaId], references: [id])
  mediaId Int
}

model Episode {
  id Int @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  title String
  year Int
  media Media @relation(fields: [mediaId], references: [id])
  mediaId Int
}

enum Role {
  USER
  ADMIN
}

enum MediaType {
  Movie
  TvSeries
}